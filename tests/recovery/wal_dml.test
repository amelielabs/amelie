open E0 "uuid": "00000000-0000-0000-0000-000000000000", "listen": [{ "host": "127.0.0.1", "port": 3485 }], "backends": 3;
connect E0 S0 127.0.0.1:3485;

# test: create wal on start
show wal;
select show('wal');
select show('state').lsn;
show all;

# test: restart
disconnect S0;
close E0;
open E0;
connect E0 S0 127.0.0.1:3485;

show wal;
select show('wal');
select show('state').lsn;
show all;

# test: create table
create table test (id serial primary key, data int default 0);
select show('state').lsn;
select identity_of("test");

# test: restart
disconnect S0;
close E0;
open E0;
connect E0 S0 127.0.0.1:3485;

# test: validate state
select show('state').lsn;
select identity_of("test");

# test: insert
insert into test () values (), (), ();
select show('state').lsn;
select identity_of("test");
select * from test;

# test: restart
disconnect S0;
close E0;
open E0;
connect E0 S0 127.0.0.1:3485;

# test: validate state
select show('state').lsn;
select identity_of("test");
select * from test;

# test: update
update test set data = id;
select show('state').lsn;
select identity_of("test");
select * from test;

# test: restart
disconnect S0;
close E0;
open E0;
connect E0 S0 127.0.0.1:3485;

# test: validate state
select show('state').lsn;
select identity_of("test");
select * from test;

# test: upsert
insert into test values (2, 0) on conflict do update set data = data + 1;
select show('state').lsn;
select identity_of("test");
select * from test;

# test: restart
disconnect S0;
close E0;
open E0;
connect E0 S0 127.0.0.1:3485;

# test: validate state
select show('state').lsn;
select identity_of("test");
select * from test;

# test: delete
delete from test where id in (0, 1);
select show('state').lsn;
select identity_of("test");
select * from test;

# test: restart
disconnect S0;
close E0;
open E0;
connect E0 S0 127.0.0.1:3485;

# test: validate state
select show('state').lsn;
select identity_of("test");
select * from test;

disconnect S0;
close E0;
