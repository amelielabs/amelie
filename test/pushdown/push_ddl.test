#

open E0 "uuid": "00000000-0000-0000-0000-000000000000", "listen": [{ "host": "127.0.0.1", "port": 3485 }], "shards": 3
connect E0 S0 localhost:3485

# test: shared table create
create table test (id int primary key, data int default 0) shared
select *.name, *.shared from system.tables()

# test: shared has single partition
select sizeof(partitions) = 1 from system.tables()

drop table test

# test: table create
create table test (id int primary key, data int default 0)
select *.name, *.shared from system.tables()

# test: table partitions created on each shard
select sizeof(partitions) = 3 from system.tables()

drop table test

disconnect S0
close E0
