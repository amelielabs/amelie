#

# test: prepare server
open E0 "uuid": "00000000-0000-0000-0000-000000000000", "tls_cert": "./tls/server.crt", "tls_key": "./tls/server.key", "listen": [{ "host": "127.0.0.1", "port": 3480, "tls": true }], "shards": 3
connect_tls E0 S0 https://localhost:3480 ./tls/ca.crt

create table test (id int primary key serial)
insert into test generate 500

# test: backup (using https)
backup E1 https://127.0.0.1:3480 ./tls/ca.crt
close E1

# test: shutdown previous server
disconnect S0
close E0

# test: restore and validate
open E1
connect_tls E1 S1 https://localhost:3480 ./tls/ca.crt
show all
select count(*) from test

disconnect S1
close E1
